@{
    ViewBag.Title = "企业管理";
    Layout = "~/Views/Shared/_LayoutFlattyMain.cshtml";
}
@section styles{

    <link href="~/Content/custom-theme/jquery-ui-1.10.3.custom.css" rel="stylesheet" />
    <link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />
    <link href="~/Content/jquery.jqGrid/jqGrid.overrides.css" rel="stylesheet" />
}
<div class='row' id='content-wrapper'>
    <div class='col-xs-12'>
        @Html.Partial("_PartialOrgNav")
        <div class="row">
            <div style="margin-bottom: 0" class="col-sm-12 box">
                <div class="box-header blue-background">
                    <div class="title">企业信息</div>
                    <div class="actions">
                        <a href="#" class="btn box-remove btn-xs btn-link">
                            <i class="icon-remove"></i>
                        </a>

                        <a href="#" class="btn box-collapse btn-xs btn-link">
                            <i></i>
                        </a>
                    </div>
                </div>
                <div class="box-content">
                    @*<div class="box-toolbox box-toolbox-top">
                            <div class="pull-left">
                                <a class="btn btn-white" id="Create">
                                    <i class="icon-plus"></i> 添加
                                </a>
                                <a class="btn btn-white">
                                    <i class="glyphicon glyphicon-pencil"></i> 修改
                                </a>
                                <a class="btn btn-white">
                                    <i class="glyphicon  glyphicon-trash"></i> 删除
                                </a>
                            </div>
                        </div>*@
                    <table id="grps"></table> <div id="pgrps"></div>

                </div>

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.jqGrid-4.6.0/js/jquery.jqGrid.src.js"></script>
    <script src="~/Scripts/jquery.jqGrid-4.6.0/js/i18n/grid.locale-cn.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            jQuery("#grps").jqGrid(
                {
                    url: '@Url.Action("Get", "OrgEnterprise")',
                    datatype: "json",
                    mtype: "get",
                    colNames:
                        ['Id', '企业编号', '企业名称', '描述', '更新时间', '创建时间'],
                    colModel: [
                        { name: 'OrgEnterpriseId', key: true, index: 'EquipmentId', editable: true, editoptions: { readonly: true },  hidden: true },
                        { name: 'OrgEnterpriseNum', index: 'EquipmentNum', editable: true, width: 40 },
                        { name: 'OrgEnterpriseName', index: 'EquipmentName', editable: true, width: 100 },
                         { name: 'OrgEnterpriseDescribe', index: 'EquipmentName', editable: true, width: 100 },
                        { name: 'OrgEnterpriseUpdateTime', index: 'EquipmentCreatTime', sorttype: 'date', editable: false, editrules: { date: true }, formatter: 'date', datefmt: 'Y-m-d', width: 60, align: "left" },
                        { name: 'OrgEnterpriseCreateTime', index: 'EquipmentUpDateTime', sorttype: 'date', editable: true, editoptions: { readonly: true }, editrules: { date: true }, formatter: 'date', datefmt: 'Y-m-d', width: 60, align: "left" }
                    ],
                    rowNum: 10,
                    width: 700,
                    rowList: [10, 20, 30],
                    pager: '#pgrps',
                    sortname: 'OrgEnterpriseUpdateTime',
                    viewrecords: true,//定义是否要显示总记录数
                    sortorder: "desc",
                    jsonReader: {
                        root: "rows",
                        page: "page",
                        total: "total",
                        records: "records",
                        repeatitems: false,
                        userdata: "userdata"
                    },
                    //caption: "企业信息表",
                    height: '100%',
                    editurl: '@Url.Action("Post", "OrgEnterprise")' // this is dummy existing url
                });
            jQuery("#grps").jqGrid('navGrid', '#pgrps',
                { edit: true, add: true, del: true },
                {},
                {},
                {},
                { multipleSearch: true, multipleGroup: true });
            //test responsiveness
            $(window).on('resize', function (event, ui) {
                // Get width of parent container
                var parWidth = $("#gbox_grps").parent().width() - 20;
                var curWidth = $("#gbox_grps").width();
                //console.log("span width " + parWidth + " gridWidth " + gWidth);
                var w = parWidth - 1; // Fudge factor to prevent horizontal scrollbars
                if (Math.abs(w - curWidth) > 2) {
                    //alert("resize to " + width);
                    console.log("span width " + parWidth + " gridWidth " + curWidth);
                    $("#grps").setGridWidth(w);
                    console.log("new width " + w);
                }

            }).trigger('resize');

        });

    </script>
}

