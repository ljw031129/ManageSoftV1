@{
    ViewBag.Title = "CreateEquipment";
    //Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@model SocialGoal.Web.ViewModels.EquipmentViewModel
<div class="span5 ">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <table>
            <tr>
                <td>
                    @Html.TextBoxFor(m => m.EquipmentName, new { @class = "span5", id = "InputGroup", style = "display:block;", placeholder = "Group Name" }) @Html.ValidationMessageFor(m => m.EquipmentName)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextAreaFor(m => m.EquipmentNum, new { @class = "span5", id = "InputGroupDesc", placeholder = "Description for new group", style = "display:block;" }) @Html.ValidationMessageFor(m => m.EquipmentNum)
                </td>

            </tr>
            <tr>
                <td>
                    <input type="submit" class="btn btn-primary pull-left" value="Create" id="CreateGroup" style="margin-right:5px;" />
                    <input type="button" class="btn" value="Cancel" id="cancel" style="margin-right:5px;" onclick="window.location.href='@Url.Action("Index", "Home")'" />

                </td>
            </tr>
        </table>


    }


</div>
