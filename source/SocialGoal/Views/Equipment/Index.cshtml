@{
    ViewBag.Title = "设备管理";
    Layout = "~/Views/Shared/_LayoutFlattyMain.cshtml";
}

@section styles{

    <link href="~/Content/custom-theme/jquery-ui-1.10.3.custom.css" rel="stylesheet" />
    <link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />
    <link href="~/Content/jquery.jqGrid/jqGrid.overrides.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/select2-3.5.1/select2.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/select2-3.5.1/select2-bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/artDialog/css/ui-dialog.css" rel="stylesheet" />
}
<div class='row' id='content-wrapper'>
    <div class='col-xs-12'>
        <div class='row'>
            <div class='col-sm-12'>
                <div class='page-header'>
                    <h1 class='pull-left'>
                        <i class='icon-user'></i>
                        <span>设备管理</span>
                    </h1>
                    <div class='pull-right'>
                        <ul class='breadcrumb'>
                            <li>
                                <a href='index.html'>
                                    <i class='icon-bar-chart'></i>
                                </a>
                            </li>
                            <li class='separator'>
                                <i class='icon-angle-right'></i>
                            </li>
                            <li>Example pages</li>
                            <li class='separator'>
                                <i class='icon-angle-right'></i>
                            </li>
                            <li class='active'>User profile</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="tabbable">
                    <ul class="nav nav-tabs nav-tabs-simple">
                        <li class="active">
                            <a href="#tabsimple1" class="green-border">
                                <i class="icon-indent-left"></i>
                                Section 1
                            </a>
                        </li>
                        <li>
                            <a href="#tabsimple2">
                                <i class="icon-edit text-red"></i>
                                Section 2
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
        <div class="row">
            <div style="margin-bottom: 0" class="col-sm-12 box">
                <div class="box-header red-background">
                    <div class="title">设备管理</div>
                    <div class="actions">
                        <a href="#" class="btn box-remove btn-xs btn-link">
                            <i class="icon-remove"></i>
                        </a>

                        <a href="#" class="btn box-collapse btn-xs btn-link">
                            <i></i>
                        </a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="box-toolbox box-toolbox-top">
                        <div class="pull-left col-sm-6">
                            <div class="row">
                                <div class="input-group  col-sm-6">
                                    <span class="input-group-addon">企业</span>
                                    <input type="text" placeholder="搜索企业" id="OrgEnterpriseId" class="form-control">
                                </div>
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary" id="SetOrgEnterprise">
                                        <i class="icon-save"></i>
                                        分配
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="pull-right">
                            <a class="btn btn-white">
                                <i class="icon-eye-open"></i>
                            </a>
                        </div>
                    </div>
                    <table id="grps"></table> <div id="pgrps"></div>

                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{

    <script src="~/Scripts/jquery.jqGrid-4.6.0/js/jquery.jqGrid.src.js"></script>
    <script src="~/Scripts/jquery.jqGrid-4.6.0/js/i18n/grid.locale-cn.js"></script>
    <script src="~/Scripts/plugins/select2-3.5.1/select2.js"></script>
    <script src="~/Scripts/plugins/select2-3.5.1/select2_locale_zh-CN.js"></script>
    <script src="~/Scripts/plugins/artDialog/dist/dialog-plus.js"></script>
    <script type="text/javascript">
        var d, OrgEnterpriseId, ids;
        $(document).ready(function () {
            // $("#OrgEnterpriseId").val("");
            $("#SetOrgEnterprise").click(function () {
                OrgEnterpriseId = $('#OrgEnterpriseId').val();
                ids = $("#grps").jqGrid("getGridParam", "selarrrow");

                if (OrgEnterpriseId == "") {
                    var d = dialog({
                        title: '提示',
                        content: '请选择企业！'
                    });
                    d.show();
                    return;
                } else if (ids == "") {
                    d = dialog({
                        title: '提示',
                        content: '请选择要分配的设备！',
                        ok: function () { }
                    });
                    d.show();
                    return;
                } else {
                    d = dialog({
                        title: '提示',
                        content: '确定要分配当前设备吗？',
                        ok: function () {
                            var that = this;
                            this.title('正在提交..');
                            $.post("/api/ApiTerminalEquipment/UpdateOrgEnterprise/" + OrgEnterpriseId + "/" + ids + "", function (result) {
                                that.close().remove();
                                $("#grps").trigger("reloadGrid");
                            });
                            return false;
                        },
                        cancelValue: '取消',
                        cancel: function () { }
                    });
                    d.show();
                }

            });
            //The url we will send our get request to
            var attendeeUrl = '@Url.Action("GetOrgEnterprises", "OrgEnterprise")';
            var pageSize = 20;

            $('#OrgEnterpriseId').select2(
            {
                placeholder: 'Enter name',
                //Does the user have to enter any data before sending the ajax request
                minimumInputLength: 0,
                allowClear: true,
                ajax: {
                    //How long the user has to pause their typing before sending the next request
                    quietMillis: 150,
                    //The url of the json service
                    url: attendeeUrl,
                    dataType: 'jsonp',
                    //Our search term and what page we are on
                    data: function (term, page) {
                        return {
                            pageSize: pageSize,
                            pageNum: page,
                            searchTerm: term
                        };
                    },
                    results: function (data, page) {
                        //Used to determine whether or not there are more results available,
                        //and if requests for more data should be sent in the infinite scrolling
                        var more = (page * pageSize) < data.Total;
                        return { results: data.Results, more: more };
                    }
                }
            });            
            jQuery("#grps").jqGrid(
                {
                    url: '/api/ApiEquipment',
                    datatype: "json",
                    mtype: "get",
                    colNames:
                        ['Id', '终端编号', '终端名称', '创建时间', '更新时间'],
                    colModel: [
                        { name: 'EquipmentId', key: true, index: 'EquipmentId', editable: true, editoptions: { readonly: true }, width: 55, hidden: true },
                        { name: 'EquipmentNum', index: 'EquipmentNum', editable: true, width: 90 },
                        { name: 'EquipmentName', index: 'EquipmentName', editable: true, width: 100 },
                        { name: 'EquipmentCreatTime', index: 'EquipmentCreatTime', sorttype: 'date', editable: true, formatter: 'date', formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' }, width: 80, align: "right", editoptions: { readonly: true, defaultValue: CurentTime() } },
                        { name: 'EquipmentUpDateTime', index: 'EquipmentUpDateTime', sorttype: 'date', editable: false, formatter: 'date', formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' }, editoptions: { readonly: true }, editrules: { date: true }, width: 80, align: "right" }
                    ],
                    multiselect: true,
                    rowNum: 10,
                    width: 700,
                    rowList: [10, 20, 30],
                    pager: '#pgrps',
                    sortname: 'EquipmentUpDateTime',
                    viewrecords: true,//定义是否要显示总记录数
                    sortorder: "desc",
                    jsonReader: {
                        root: "rows",
                        page: "page",
                        total: "total",
                        records: "records",
                        repeatitems: false,
                        userdata: "userdata"
                    },
                    // caption: "终端信息表",
                    height: '100%',
                    editurl: '/api/ApiEquipment' // this is dummy existing url
                });
            jQuery("#grps").jqGrid('navGrid', '#pgrps',
                { edit: true, add: true, del: true },
                { },
                { },
                {},
                { multipleSearch: true, multipleGroup: true });
            //test responsiveness
            $(window).on('resize', function (event, ui) {
                // Get width of parent container
                var parWidth = $("#gbox_grps").parent().width();
                var curWidth = $("#gbox_grps").width();
                //console.log("span width " + parWidth + " gridWidth " + gWidth);
                var w = parWidth - 1; // Fudge factor to prevent horizontal scrollbars
                if (Math.abs(w - curWidth) > 2) {
                    //alert("resize to " + width);
                    console.log("span width " + parWidth + " gridWidth " + curWidth);
                    $("#grps").setGridWidth(w);
                    console.log("new width " + w);
                }

            }).trigger('resize');
            function CurentTime() {
                var now = new Date();

                var year = now.getFullYear();       //年
                var month = now.getMonth() + 1;     //月
                var day = now.getDate();            //日

                var hh = now.getHours();            //时
                var mm = now.getMinutes();          //分

                var clock = year + "-";

                if (month < 10)
                    clock += "0";

                clock += month + "-";

                if (day < 10)
                    clock += "0";

                clock += day + " ";

                if (hh < 10)
                    clock += "0";

                clock += hh + ":";
                if (mm < 10) clock += '0';
                clock += mm;
                return (clock);
            }
        });

    </script>
}





